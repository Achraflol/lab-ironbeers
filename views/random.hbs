<section class="container">

    <article class="random-card">
        <div class="img-card">
            <img src="{{randomCard.image_url}}" alt="{{randomCard.name}}">
        </div>

        <div>
            <h1>{{randomCard.name}}</h1>

            <p>{{randomCard.description}}</p>

            <h2>Food Pairing</h2>

            <ul>
                {{#each randomCard.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>


            <p>
            <h2>Brewers Tips: </h2>
            {{randomCard.brewers_tips}}
            </p>
        </div>
    </article>


</section>